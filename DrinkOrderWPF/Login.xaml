<Window x:Class="DrinkOrderWPF.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Drink Order Login" Height="319" Width="300" FontSize="14" Background="#FF179AC8" WindowStartupLocation="CenterScreen">
    <Border Background="#2e3137" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White" HorizontalAlignment="Center"/>
            <TextBox Name="txtUsername" Background="#FF179AC8" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="White" HorizontalAlignment="Center"/>
            <PasswordBox Name="txtPassword" Background="#FF179AC8" Foreground="White" FontSize="18"/>
            <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Login" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
